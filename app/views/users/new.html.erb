<div class="container">
  <div class="content-right">
    <div class="grid1">
      <div class="form-sec">
        <%= form_for @user do |f| %>
        <form>
          <%= f.text_field :first_name, :class => "user", placeholder: "First Name" %>
          <%= f.text_field :last_name, :class => "user", placeholder: "Last Name" %>
          <%= f.text_field :email, :class => "mail", placeholder: "Email" %>
          <%= f.password_field :password,:class => "lock", placeholder: "Password" %>
          <%= f.password_field :password_confirmation, :class => "lock", placeholder: "Confirm Password" %>
          <%= f.select :city_name, [ 'Austin', 'Gibraltar', 'Hue', 'Istanbul', 'London', 'New York','Rome','San Francisco'], :prompt => 'Home City' %>
          <%= f.submit "Sign Up!" %>
          <% end %>
        </form>              
      </div>        
    </div>
  </div>
</div>

