<br>
<div id="masthead">  
  <div class="container">
    <div class="row">
      <div class="col-md-7">
      <%= image_tag @user.avatar.url(:thumb), size: "150x150" %>
        <h1><%=@user.first_name%> <%=@user.last_name%>
          <p class="lead"><% id = @user.city_id %> <% if id != nil %>   <% city = City.find(id)%> <%=city.name%></p>
        	<%end%>
        </h1>
        	<%= link_to 'Edit Profile', edit_user_path %>
      </div>
      <div class="col-md-5">
        <div class="well well-lg"> 
          <div class="row">
            <div class="col-sm-15">
              <% id = @user.city_id %> <% if id != nil %>   <% city = City.find(id)%><%=image_tag(city.image_url, size: '600x200') %>	<%end%>
            </div>
          </div>
        </div>
      </div>
    </div> 
  </div><!-- /cont -->
<div class="blog">
	<div class="container">
		<div class="b_left pull-right">
		</div>
 		<div class="main row">
			<div class="col-md">
				<h2 class="style"> RECENT POSTS</h2>
					<div class="blog_main">
						<% @user.posts.each do |post|%>
						<h4><%=post.title%></h4>
					<div class="blog_list pull-left">
					  <ul class="list-unstyled">
							<li><span>City: <%= City.find(post.city_id).name %></span></li>
					  </ul>
					</div>
					<div class="b_left pull-right">
						<span><%=timeago(post.created_at)%></span>
					</div>
					<div class="clearfix"></div>
						<p class="para"><%=post.content%></p>
						<button class="btn btn-default"><%= link_to "Edit", "/posts/" + post.id.to_s %></button> <button class="btn btn-default"><%= link_to "Delete", delete_post_path(post), method: "delete", data: {confirm: "Are you sure?"}%></button>
					</div><hr>
					<%end%>
			</div>
		</div>
			<div class="clearfix"></div>
	</div>
</div>




