<div class="container"><br>
  <center><h3 class='edit_p'> Edit Post</h3></center>
  <div class="content-right">
    <div class="grid1">
      <div class="form-sec">
<%= form_for @post, url: "/posts/" + @post.id.to_s, method: 'patch' do |f| %><br>
        <form>
					<%= f.text_field :title %><br>
					<%= f.text_area :content %><br>
						<%= f.submit "Update" %>
          <br>
          <%end%>
        </form>              
      </div>        
    </div>
  </div>
</div>

